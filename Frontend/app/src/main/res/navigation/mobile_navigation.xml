<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_priority">

    <fragment
        android:id="@+id/nav_priority"
        android:name="com.example.myapplication.ui.priority.InboxFragment"
        android:label="Priority Inbox"
        tools:layout="@layout/fragment_inbox" />

    <fragment
        android:id="@+id/nav_regular"
        android:name="com.example.myapplication.ui.gallery.GalleryFragment"
        android:label="Regular Inbox"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_spam"
        android:name="com.example.myapplication.ui.slideshow.SlideshowFragment"
        android:label="Spam Inbox"
        tools:layout="@layout/fragment_slideshow" />
